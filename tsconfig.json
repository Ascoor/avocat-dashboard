{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@features/*": ["src/features/*"],
      "@shared/*": ["src/shared/*"],
      "@config/*": ["src/config/*"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/styles/*"],
      "@react-spring/web": ["src/types/stubs/react-spring-web.d.ts"],
      "@radix-ui/react-slot": ["src/types/stubs/radix-react-slot.d.ts"],
      "react-redux": ["src/types/stubs/react-redux.d.ts"],
      "react-router-dom": ["src/types/stubs/react-router-dom.d.ts"],
      "recharts": ["src/types/stubs/recharts.d.ts"]
    },
    "types": [],
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
